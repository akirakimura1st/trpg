<div class="container-fluid">
	<div class="row">
			<div class="form-group">
				<%= form_for @user do |f| %>
					<div class="form-row">
						<div class="col-md-8">
							<p>名前</p>
							<%= f.text_field :user_name, class:"text_field" %>
							<p>メールアドレス</p>
							<%= f.text_field :email, class:"text_field" %>
							<div class="form-row">
								<div class="col-md-6">
									<p>ボイスチャット</p>
									<%= f.select :voice_chat, [["可能", "可能"], ["不可", "不可"]], class:"form-control" %>
								</div>
								<div class="col-md-6">
									<p>テキストチャット</p>
									<%= f.select :text_chat, [["可能", "可能"], ["不可", "不可"]], class:"form-control" %>
								</div>
							</div>
							<p>自己紹介</p>
							<%= f.text_area :introduction, class:"area_field" %>
							<%= f.submit "送信", class:"btn btn-dark btn-reg" %>
						</div>
						<div class="col-md-4">
							<p>プロフィール画像 <span class="careful">※正方形の画像のみ</span></p>
							<div class="image">
								<div id="img_field" onClick="$('#file').click()" >
									<% if @user.profile_image.present? %>
										<div class="on_text">
											<%= attachment_image_tag @user, :profile_image, class:"user_image_edit", fallback: "no_image.jpg" %>
											<p><strong>画像を選択</strong></p>
										</div>
									<% else %>
										<%= f.attachment_field :profile_image %>
									<% end %>
								</div>
							</div>
							<div class="block_insert"></div>
							<p>ヘッダー画像 <span class="careful">※横長の画像のみ</span></p>
							<div class="image">
								<div id="img_field1" onClick="$('#file1').click()" >
									<% if @user.profile_head_image.present? %>
										<div class="on_text">
											<%= attachment_image_tag @user, :profile_head_image, class:"user_image_edit", fallback: "no_image.jpg" %>
											<p><strong>画像を選択</strong></p>
										</div>
									<% else %>
										<%= f.attachment_field :profile_head_image %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
		<%= f.attachment_field :profile_image, class: "image", style: "display:none;", id: "file"%>
		<%= f.attachment_field :profile_head_image, class: "image", style: "display:none;", id: "file1"%>
			<% end %>
		</div>
	</div>
</div>