<div class="block_insert"></div>
	<div class="row">
		<div class="col-md-3">
			<div class="left_side_bar1">
				<% if user_signed_in? %>
				<div class="label">
					<p>ユ ー ザ ー 情 報</p>
				</div>
				<%= link_to users_edit_path do %>
				<div class="user_image_field">
					<%= attachment_image_tag @user, :profile_image, format: 'png', fallback: "no_image.jpg", class:"user_image1" %>
				</div>
				<% end %>
				<div class="user_info_field">
					<hr>
						<p>ようこそ、<%= @user.user_name %>さん！</p>
						<p>メールアドレス：<%= @user.email %></p>
						<p>最終更新 <i class="fas fa-redo"></i>：<%= @user.updated_at.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
						<p>ボイスセッション <i class="fas fa-microphone-alt"></i>：<%= @user.voice_chat %></p>
						<p>テキストセッション <i class="fas fa-comment-alt"></i>：<%= @user.text_chat %></p>
						<p><%= link_to '人から見た自分のマイページ', user_path(@user.id) %></p>
						<hr>
						<%= link_to '日記を投稿する', new_diary_path %>
						<hr>
						<%= link_to 'コミュニティを作成する', new_community_path %>
						<hr>
						<%= link_to 'クトゥルフ神話キャラシ作成', new_cthulhu_path %>
						<hr>
						<%= link_to '新規セッション募集', new_session_recruitment_path %>
					</div>
				<% else %>

					<div class="label">
						<p>ロ グ イ ン す る</p>
					</div>
					<div class="common_login_field">
					<%= form_for(:user, :url => session_path(:user)) do |f| %>
					<div class="margin_top_bottom">
						<p>Eメールアドレス</p>
						<%= f.text_field :email, class:"text_field", :placeholder => "登録されたアドレス" %>
					</div>
					<div class="margin_top_bottom">
						<p>パスワード</p>
						<%= f.password_field :password, class:"text_field", :placeholder => "登録されたパスワード" %>
					</div>
						<%= f.submit 'ログイン', class:"btn-reg1" %>
					<% end %>
					</div>
				<% end %>
			</div>
		<div class="left_side_bar2">
			<div class="label">
				<p>新 着 コ ミ ュ</p>
			</div>
			<div class="session_all">
				<% if @community.blank? %>
					<p class="null_text">まだコミュは作成されていません。</p>
				<% else %>
				<% @community.first(7).each do |s| %>
				<%= link_to community_path(s.id) do %>
				<p><%= attachment_image_tag s, :community_image, :fill, 300, 300, format: 'png', fallback: "no_image.jpg", size: '40x40', class:"user_image" %> <%= s.community_title %></p>
					<% end %>
					<hr>
				<% end %>
				<div class="session_index">
					<%= link_to 'コミュニティ一覧', community_index_path %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-6">

		<div class="middle_fieild1">
			<div class="label">
				<p>新 着 セ ッ シ ョ ン 募 集</p>
			</div>
			<div class="session_all">
				<% if @session.blank? %>
					<p class="null_text_session">まだセッションは募集されていません。</p>
				<% else %>
				<% @session.first(7).each do |s| %>
					<p class="session_item"> <%= s.created_at.strftime('%m月%d日') %>【<%= s.use_system.truncate(10) %>】<%= link_to session_recruitment_path(s.id) do %><%= s.session_name.truncate(10) %><% end %> 締切：<%= s.deadline.strftime('%m月%d日 %H:%M') %> 開催：<%= s.start_date.strftime('%m月%d日 %H:%M') %> 予想プレイ時間：<%= s.play_time %>時間</p>
					<hr>
				<% end %>
				<div class="session_index">
					<%= link_to 'セッション一覧', session_recruitments_path %>
				</div>
				<% end %>
			</div>
		</div>
		<div class="middle_fieild2">
			<div class="label">
				<p>新 着 日 記</p>
			</div>
			<div class=diary_index>
				<% if @diary.blank? %>
					<p class="null_text">まだ日記は投稿されていません。</p>
				<% else %>
				<% @diary.first(5).each do |d| %>
				<%= attachment_image_tag d.user, :profile_image, :fill, 300, 300, format: 'png', fallback: "no_image.jpg", size: '40x40', class:"user_image" %>
					【<%= link_to diary_path(d.id) do %><%= d.title.truncate(15) %><% end %>】<%= d.body.truncate(24) %> ネタバレ：<%= d.spiler %>
					<hr>
				<% end %>
				<div class="session_index">
					<%= link_to '日記一覧', diaries_path %>
				</div>
				<% end %>
			</div>
		</div>
		<div class="middle_fieild3">
			<div class="label">
				<p>新 着 キ ャ ラ シ</p>
			</div>
				<div class="character_sheet">
					<% if @cthulhu.blank? %>
						<p class="null_text">まだキャラシは作成されていません。</p>
					<% else %>
					<% @cthulhu.first(5).each do |s| %>
					<%= link_to cthulhu_path(s.id) do %>
						<%= attachment_image_tag s, :character_image, :fill, 300, 300, format: 'png', fallback: "no_image.jpg", size: '40x40', class:"user_image" %>
					<% end %>
						<%= link_to cthulhu_path(s.id) do %><%= s.character_name.truncate(16) %><% end %> 作成者：<%= s.user.user_name.truncate(16) %> 作成日：<%= s.created_at.strftime('%m月%d日') %> 更新日：<%= s.updated_at.strftime('%m月%d日') %>
						<hr>
					<% end %>
					<div class="character_sheet_index">
						<%= link_to 'キャラクターシート一覧', cthulhus_path %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="right_side_bar">
			<div class="label">
				<p>新 着 ユ ー ザ ー</p>
			</div>
							<div class="character_sheet">
					<% if @users.blank? %>
						<p class="null_text">まだユーザーはいません。</p>
					<% else %>
					<% @users.first(17).each do |s| %>
					<%= link_to user_path(s.id) do %>
						<%= attachment_image_tag s, :profile_image, :fill, 300, 300, format: 'png', fallback: "no_image.jpg", size: '40x40', class:"user_image" %>
					<% end %>
					<%= s.user_name %>
						<hr>
					<% end %>
					<div class="character_sheet_index">
						<%= link_to 'ユーザ一覧', users_path %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
